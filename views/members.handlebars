<!-- header and navbar with collapsable links -->
<header>
  <nav class="navbar fixed-top navbar-expand-md navbar-dark pb-2 p-0 m-0 px-2">
    <a class=" navbar-brand" href="/"><img src="/assets/villageapp.png" alt="village logo"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
      aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <!-- linked but like not really-->
          <a class="nav-link" href="/about">About</a>
        </li>
        <li class="nav-item">
          <!-- signout page not made yet-->
          <a class="nav-link" href="/logout">Sign Out</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<div class="jumbotron mt-3" id="memberhome">
  <h3 class="welcome">Welcome, {{ username }}</h3>
  <h5>Scroll to explore your community.</h5>
  <div class="card text-center">
    <div class="card-header">
      <span>The Fun Stuff</span>
      <div>
        <select id="funpostlist" size="1">
          <option value="">---Read More---</option>
          {{#each funPosts}}
          <option value="{{this.dataValues.id}}">{{ dataValues.title }}</option>
          {{/each}}
        </select>
      </div>
      <a href="/submit?fun=true">Submit Something Fun</a>
    </div>
    <div class="card-body" id="funstuff">
      <div id="latest">
        <div id="fun-title"></div>
        <div id="fun-description"></div>
      </div>

      <div id="clicked-post">
      </div>
    </div>

  </div>
  <hr>
  <div class="card text-center">
    <div class="card-header">
      <span>The Serious Stuff</span>
      <div>
        <select id="seriouspostlist" size="1">
          <option value="" selected="selected">---Read More---</option>
          {{#each seriousPosts}}
          <option value="{{this.dataValues.id}}">{{ dataValues.title }}</option>
          {{/each}}
        </select>
      </div>
      <a href="/submit?fun=false">Submit Something Serious</a>
    </div>
    <div class="card-body" id="seriousstuff">
      <div id="serious-title"></div>
      <div id="serious-description"></div>
      <div id="clicked-post">
        <h5 class="card-title"></h5>
      </div>
    </div>
  </div>

  <hr>
  <div class="card text-center">
    <div class="card-header">
      <span>Your Posts</span>
    </div>
    <div class="card-body" id="memberhistory">
      <button class="btn" id="btn" name={{userid}}>
        <p class="card-title history">Your history of Submissions</p>
      </button>
      <ul id="currentposts"></ul>
    </div>

  </div>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/members.js"></script>